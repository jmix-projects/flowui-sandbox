<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://projectDetailView.title"
      focusComponent="form">
    <data>
        <instance id="projectDc"
                  class="com.company.demo.entity.Project">
            <fetchPlan extends="_base">
                <property name="participants" fetchPlan="_base"/>
            </fetchPlan>
            <loader/>
            <collection id="participantsDc" property="participants"/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="projectDc">
            <textField id="nameField" property="name"/>
        </formLayout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button action="participantsTable.add"/>
            <button action="participantsTable.exclude"/>
        </hbox>
        <dataGrid id="participantsTable" dataContainer="participantsDc" width="100%" minHeight="20em">
            <actions>
                <action id="add" type="add"/>
                <action id="exclude" type="exclude"/>
            </actions>
            <columns>
                <column property="username"/>
            </columns>
        </dataGrid>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
