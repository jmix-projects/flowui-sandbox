<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://projectListView.title"
      focusComponent="projectsTable">
    <data readOnly="true">
        <collection id="projectsDc"
                    class="com.company.demo.entity.Project">
            <fetchPlan extends="_base"/>
            <loader id="projectsDl">
                <query>
                    <![CDATA[select e from Project e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <queryParameters>
            <pagination component="pagination"/>
        </queryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createBtn" action="projectsTable.create"/>
            <button id="editBtn" action="projectsTable.edit"/>
            <button id="removeBtn" action="projectsTable.remove"/>
            <simplePagination id="pagination" dataLoader="projectsDl"/>
        </hbox>
        <dataGrid id="projectsTable"
                  width="100%"
                  minHeight="20em"
                  dataContainer="projectsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column property="name"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
