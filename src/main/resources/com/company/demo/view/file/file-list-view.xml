<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://fileListView.title"
      focusComponent="filesTable">
    <data readOnly="true">
        <collection id="filesDc"
                    class="com.company.demo.entity.File">
            <fetchPlan extends="_base"/>
            <loader id="filesDl">
                <query>
                    <![CDATA[select e from File_ e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <queryParameters>
            <pagination component="pagination"/>
        </queryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <hbox id="buttonsPanel" classNames="buttons-panel" alignItems="END">
            <button id="createBtn" action="filesTable.create"/>
            <button id="editBtn" action="filesTable.edit"/>
            <button id="removeBtn" action="filesTable.remove"/>
            <button id="downloadBtn" action="filesTable.download"/>

            <simplePagination id="pagination" dataLoader="filesDl"/>
        </hbox>
        <dataGrid id="filesTable"
                  width="100%"
                  minHeight="20em"
                  dataContainer="filesDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="download" type="itemTracking" text="Download" icon="DOWNLOAD"/>
            </actions>
            <columns>
                <column property="file"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectBtn" action="selectAction"/>
            <button id="discardBtn" action="discardAction"/>
        </hbox>
    </layout>
</view>
