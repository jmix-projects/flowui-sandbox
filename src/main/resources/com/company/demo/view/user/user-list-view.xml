<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://UserView.title"
      focusComponent="usersTable">
    <data readOnly="true">
        <collection id="usersDc"
                    class="com.company.demo.entity.User">
            <fetchPlan extends="_base"/>
            <loader id="usersDl">
                <query>
                    <![CDATA[select e from User e order by e.username]]>
                </query>
            </loader>
        </collection>
    </data>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <queryParameters>
            <pagination component="pagination"/>
        </queryParameters>
    </facets>
    <layout>
        <details id="filterWrapper" summaryText="Filter" opened="true" width="100%">
            <formLayout id="filterFields">

            </formLayout>

            <hbox id="actionsPanel">
                <comboButton id="refreshBtn" text="msg:///actions.Refresh" icon="REFRESH" themeNames="primary success">
                    <items>
                        <textItem id="test" text="Test"/>
                    </items>
                </comboButton>

                <button id="addConditionBtn" text="Add search condition" themeNames="tertiary"/>

                <dropdownButton icon="COG" classNames="filter-settings">
                    <items>
                        <textItem id="test1" text="Test 1"/>
                        <textItem id="test2" text="Test 2"/>
                        <textItem id="test3" text="Test 3"/>
                    </items>
                </dropdownButton>
            </hbox>
        </details>

        <hbox id="buttonsPanel" classNames="buttons-panel" alignItems="CENTER">
            <button id="createBtn" action="usersTable.create"/>
            <button id="editBtn" action="usersTable.edit"/>
            <button id="removeBtn" action="usersTable.remove"/>
<!--            <button id="refreshBtn" action="usersTable.refresh"/>-->
            <button id="showRoleAssignmentsBtn" action="usersTable.showRoleAssignments"/>

            <dropdownButton id="additionalMenu" text="msg://additionalMenu" icon="COG">
                <items>
                    <actionItem id="changePassword" ref="usersTable.changePassword"/>
                    <actionItem id="resetPassword" ref="usersTable.resetPassword"/>
                </items>
            </dropdownButton>

            <button id="testBtn" text="Test" themeNames="error"/>

            <checkbox id="bufferedCheck" label="Buffered"/>

            <simplePagination id="pagination" dataLoader="usersDl"/>
        </hbox>
        <dataGrid id="usersTable"
                  width="100%"
                  minHeight="20em"
                  dataContainer="usersDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
                <action id="refresh" type="refresh"/>
                <action id="showRoleAssignments" type="showRoleAssignments"/>
                <action id="changePassword" type="changePassword"/>
                <action id="resetPassword" type="resetPassword"/>
            </actions>
            <columns>
                <column property="username" editable="true"/>
                <column property="firstName" editable="true"/>
                <column property="lastName" editable="true"/>
                <column property="email" editable="true"/>

                <column property="timeZoneId"/>
                <column property="active"/>

                <editorActionsColumn width="8em" flexGrow="0">

                    <editButton icon="PENCIL"/>

                    <saveButton icon="CHECK" themeNames="success"/>
                    <cancelButton icon="CLOSE" themeNames="error"/>

                    <!--                    <closeButton text="Close" icon="CLOSE"/>-->
                </editorActionsColumn>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button action="selectAction"/>
            <button action="discardAction"/>
        </hbox>
    </layout>
</view>
